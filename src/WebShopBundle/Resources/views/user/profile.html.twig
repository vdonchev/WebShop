{% extends '@WebShop/base.html.twig' %}

{% block main_title %}Hi, {{ user.fullName }}{% endblock %}

{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Profile details:</h3>
        </div>
        <div class="panel-body">
            <table class="table table-responsive">
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.fullName }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles|join(", ") }}</td>
                </tr>
                <tr>
                    <th>Funds</th>
                    <td><strong>â‚¬{{ user.funds }}</strong></td>
                </tr>
            </table>
            <hr>
            <a href="{{ path("user_profile_edit") }}" class="btn btn-warning">Edit <span class="glyphicon glyphicon-edit"></span></a>
        </div>
    </div>
{% endblock %}

