{% extends "@WebShop/base.html.twig" %}

{% block main_title %}{{ product.name }}{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="{{ vich_uploader_asset(product, "imageFile") }}" alt="{{ product.name }}">
            </div>
        </div>
        <div class="col-md-8">
            <h2>Description:</h2>
            <p>{{ product.description }}</p>
            <p>Category: <a href="#">{{ product.category }}</a></p>
            <p>In stock: <strong>{{ product.quantity }}</strong></p>
            <div class="h2">
                Price:
                <span class="label label-success">â‚¬{{ product.price }}</span>
            </div>
            <hr>
            <form method="post" action="{{ path("user_cart_add", {"id": product.id}) }}"
                  style="display: inline-block">
                <button class="btn btn-primary" type="submit"><span
                            class="glyphicon glyphicon-shopping-cart"></span> Add to Cart
                </button>
            </form>
        </div>
    </div>
{% endblock %}