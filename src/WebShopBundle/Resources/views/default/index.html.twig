{% extends "@WebShop/base.html.twig" %}

{% block main_title %}Latest {{ products|length }} products{% endblock %}

{% block main %}
    {% if products|length > 0 %}
        {% for index,product in products %}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ vich_uploader_asset(product, "imageFile") }}" alt="{{ product.name }}">
                    <div class="caption">
                        <h3>{{ product.name }}</h3>
                        <p><strong>Quantity available: {{ product.quantity }}</strong></p>
                        <p>{{ product.description }}</p>
                        <div class="h2"><span class="label label-success">â‚¬{{ product.price }}</span></div>

                        <hr>
                        <p>
                        <form method="post" action="{{ path("user_cart_add", {"id": product.id}) }}"
                              style="display: inline-block">
                            <button class="btn btn-primary" type="submit"><span
                                        class="glyphicon glyphicon-shopping-cart"></span> Add to Cart
                            </button>
                        </form>
                        <a href="#" class="btn btn-default" role="button">View details</a>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}
