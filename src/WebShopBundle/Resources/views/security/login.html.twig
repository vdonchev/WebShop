{% extends "@WebShop/base.html.twig" %}

{% block main_title %}Login{% endblock %}

{% block main %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    {{ form_start(login_form) }}

    {{ form_row(login_form._username) }}
    {{ form_row(login_form._password) }}

    <button type="submit" class="btn btn-success" formnovalidate>Login <span class="glyphicon glyphicon-lock"></span>
    </button>

    {{ form_end(login_form) }}
{% endblock %}